{
    "compilerOptions": {
      "allowJs": true,
      "noEmit": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        // must match .bablerc
        "api/*": ["./app/api/*"],
        "app/*": ["./app/react/*"],
        "shared/*": ["./app/shared/*"],
        "UI/*": ["./app/react/UI/*"]
      }
    },
    "include": ["./app/**/*"],
    "exclude": ["node_modules", "**/node_modules/*", "fixtures", "dist", "prod"]
  }
  
